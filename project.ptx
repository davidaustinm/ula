<?xml version="1.0" encoding="utf-8"?>
<!--
    This file provides the overall configuration for your PreTeXt
    project. To edit the content of your document, open `source/main.ptx`
    (default location).
-->
<project
    ptx-version="2"
    source="src"
    publication="publication"
    output-dir="output"
    site="site"
    stage="output/stage"
    xsl="xsl"
    >
  <targets>
    <target
        name="html"
        format="html"
        source="ula.xml"
        publication="publication.ptx"
        output-dir="html"
        deploy-dir="."
        xsl="html.xsl"
        />
    <target
        name="pdf"
        format="pdf"
        pdf-method="xelatex"
        source="ula.xml"
        publication="publication.ptx"
        output-dir="pdf"
        xsl="latex.xsl"
        />
    <target
        name="latex"
        format="latex"
        source="ula.xml"
        publication="publication.ptx"
        output-dir="latex"
        xsl="latex.xsl"
        />
    <target
        name="runestone"
        format="pdf"
        source="ula.xml"
        publication="runestone.ptx"
        xsl="html.xsl"
        output-dir="published/ula"
        />
        
  </targets>
</project>

